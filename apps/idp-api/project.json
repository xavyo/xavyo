{
  "name": "idp-api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/idp-api/src",
  "tags": ["type:app", "lang:rust"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build --release -p idp-api",
        "cwd": "."
      },
      "inputs": ["rust", "sharedRust", "^rust"],
      "outputs": ["{workspaceRoot}/target/release/idp-api"]
    },
    "build:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo build -p idp-api",
        "cwd": "."
      },
      "inputs": ["rust", "sharedRust", "^rust"],
      "outputs": ["{workspaceRoot}/target/debug/idp-api"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo test -p idp-api",
        "cwd": "."
      },
      "inputs": ["rust", "sharedRust", "^rust"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo clippy -p idp-api -- -D warnings -A unexpected_cfgs",
        "cwd": "."
      },
      "inputs": ["rust", "sharedRust"]
    },
    "run": {
      "executor": "nx:run-commands",
      "options": {
        "command": "cargo run -p idp-api",
        "cwd": "."
      }
    }
  }
}
